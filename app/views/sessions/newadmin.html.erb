<!DOCTYPE html>

<html>
    <head></head>
    <body>
    <div class="row">
        <h1>Admin Login</h1>
        <div class="col-md-6 col-md-offset-3">
            <%= form_with(url: adminlogin_path, scope: :session, local: true) do |f| %>
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
            <%= f.submit "Log in", class: "btn btn-primary" %>
        <% end %>

        </div>
    </div>
    </body>
</html>