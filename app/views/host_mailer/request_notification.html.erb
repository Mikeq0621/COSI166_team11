
<html>
    <head>
         <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' /> 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
            <p>Dear <%= @host.name%>,</p>
            <p><%= @user.name%> Requested your space at <%= @host.address%></p>
            <div class="card w-50">
            <div class="card-body">
                <h5 class="card-title">Request Details</h5>
                <table class="table">
                    <thead>
                        <th scope="col">Address</th>
                        <th scope="col">User</th>
                        <th scope="col">Duration</th>
                        <th scope="col"> # Boxes</th>
                        <th scope="col">Price</th>
                        <th scope="col">Accept/Deny</th>
                    </thead>
                    <tbody>
                        <tr>
                            <td><%= @request.host.address%></td>
                            <td><%= link_to @request.user.name,@request.user%></td>
                            <td><%= @request.duration%></td>
                            <td><%= @request.boxes%></td>
                            <td><%= @price%></td>
                            <td>
                                <%= link_to bootstrap_icon("patch-check-fill",fill:"green",width:25,height:25),'/hostlogin'%>
                                <%= link_to bootstrap_icon("x-circle-fill",fill:"red",width:25,height:25), '/hostlogin'%>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            
                                    
        </div>
    </body>
</html>