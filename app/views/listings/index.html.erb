<!DOCTYPE html>

<html>
    <head></head>
    <body>
        <h1>Listings</h1>
        <div class="container">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Space Available (boxes)</th>
                        <th scope="col">Duration (weeks)</th>
                        <th scope="col">Host Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Street Address</th>
                        <th scope="col">City</th>
                        <th scope="col">Zip Code</th>
                        <th scope="col">See Listing</th>
                    </tr>
                </thead>
                <tbody>
                    <% @listings.each do |l|%>
                    <tr>
                        <td><%= l.space%></td>
                        <td><%= l.duration%></td>
                        <td><%= Host.find(l.id).name%></td>
                        <td><%= Host.find(l.id).email%></td>
                        <td><%= Host.find(l.id).phone_number%></td>
                        <td><%= Host.find(l.id).address%></td>
                        <td><%= Host.find(l.id).city%></td>
                        <td><%= Host.find(l.id).zip_code%></td>
                        <td><%= link_to "See Listing", l%></td>
                    </tr>
                    <%end%>
                </tbody>
            </table>
        </div>
    </body>

</html>