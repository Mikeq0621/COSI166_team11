        <% if current_host == @host%>
        <div class="col-md-8">
          <div class="card mb-3">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <h5 class="mb-0">Full Name</h5>
                </div>
                <div class="col-sm-9 text-secondary">
                    <%= @user.name%>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h5 class="mb-0">Email</h5>
                </div>
                <div class="col-sm-9 text-secondary">
                    <%= @user.email%>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h5 class="mb-0">Phone</h5>
                </div>
                <div class="col-sm-9 text-secondary">
                    <%= '(' + @user.phone_number.first(3) + ')' + '-' + @user.phone_number[3, 3] + '-' +@user.phone_number.last(4)  %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h5 class="mb-0">Address</h5>
                </div>
                <div class="col-sm-9 text-secondary">
                    <%= @user.address + ', ' + @user.city + ', ' + @user.state +  ' ' + @user.zip_code  %>
                </div>
              </div>
            </div>
          </div>