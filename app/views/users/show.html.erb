<div class="container">
<div class="main-body">
    
    <style>
        body{
            margin-top:20px;
            color: #1a202c;
            text-align: left;
            background-color: #e2e8f0;   
        }
    </style>
    
      <div class="row gutters-sm">
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <div class="d-flex flex-column align-items-center text-center">
                <section class="hk-sec-wrapper">
                  <div class="avatar">
                    <span class="avatar-text avatar-text-danger rounded-circle"><span class="initial-wrap"><%= get_initials(@user.name)%><span></span></span>
                    </span>
                  </div>
                </section>
                <h3 style="color:green;">User</h3>
                <div class="mt-3">
                 <h4><%= @user.name%></h4>
                  <p class="text-secondary mb-1"><%= @user.email%></p>
                  <p class="text-muted font-size-sm"><%= @user.city + ', ' + @user.state%></p>
                <% if current_user == @user%>
                <%= link_to "Edit Profile", user_edit_path(@user), class:"btn btn-info"%>
                <%end%>
                </div>
              </div>
            </div>
          </div>
        </div>

        <% if current_host == @host%>
        <div class="col-md-8">
          <div class="card mb-3">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <h5 class="mb-0">Full Name</h5>
                </div>
                <div class="col-sm-9 text-secondary">
                    <%= @user.name%>
                    
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h5 class="mb-0">Email</h5>
                </div>
                <div class="col-sm-9 text-secondary">
                    <%= @user.email%>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h5 class="mb-0">Phone</h5>
                </div>
                <div class="col-sm-9 text-secondary">
                    <%= '(' + @user.phone_number.first(3) + ')' + '-' + @user.phone_number[3, 3] + '-' +@user.phone_number.last(4)  %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h5 class="mb-0">Address</h5>
                </div>
                <div class="col-sm-9 text-secondary">
                    <%= @user.address + ', ' + @user.city + ', ' + @user.state +  ' ' + @user.zip_code  %>
                </div>
              </div>
            </div>
          </div>

          <div class="row gutters-sm">
            <div class="col-sm-6 mb-3">
              <div class="card h-100">
                <div class="card-body">
                  <h4 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2"></i>Previous Transactions</h4>
                    <table class="table">
                        <thead>
                            <tr>
                                    <th scope="col">Listing ID</th>
                                    <th scope="col">Host</th>
                                    <th scope="col">Boxes</th>
                                    <th scope="col">Duration</th>
                                    <th scope="col">Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @transactions.each do |t|%>
                                 <tr>
                                    <th scope="row"><%= link_to t.listing_id,t.listing%></th>
                                    <td><%= t.host.name%></td>
                                    <td><%= t.boxes%></td>
                                    <td><%= t.duration%> weeks</td>
                                    <td>$<%=t.price%></td>
                                 </tr>
                                <%end%>
                        </tbody>
                    </table>
                </div>
              </div>
            </div>

            <div class="col-sm-6 mb-3">
              <div class="card h-100">
                <div class="card-body">
                  <h4 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2"></i>Pending Requests</h4>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Listing ID</th>
                                <th scope="col">Host name</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @requests.each do |r|%>
                                <tr>
                                    <td><%= link_to r.listing_id, r.listing%></td>
                                    <td><%= link_to r.host.name, r.host%></td>
                                </tr>
                            <%end%>
                        </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
        <%end%>
    </div>
</div>