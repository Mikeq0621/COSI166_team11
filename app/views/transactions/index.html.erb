<!DOCTYPE html>

<html>
    <head></head>
    <body>
        <h1>Transactions</h1>
        <div class="container">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Host</th>
                        <th scope="col">User</th>
                        <th scope="col">Price</th>
                        <th scope="col">Duration (weeks)</th>
    
                    </tr>
                </thead>
                <tbody>
                    <% @transactions.each do |t|%>
                    <tr>
                        <td><%=link_to t.host.name, t.host%></td>
                        <td><%= link_to t.user.name, t.user%></td>
                        <td><%= t.price%></td>
                        <td><%= t.duration%></td>
                       
                    </tr>
                    <%end%>
                </tbody>
            </table>
        </div>
    </body>

</html>