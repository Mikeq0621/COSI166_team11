<!DOCTYPE html>

<html>
    <head></head>
    <body>
        <div class="row">
            <div class="col-md-5 col-md-offset-3">
                <h1>Write a Review</h1>
                <%= form_with(url:"/write_review/#{@host.id}",local:true,method: :post) do |f|%>
                    <%= f.hidden_field :host_id, value:@host.id%>
                    <%= f.label :stars%>
                    <%= f.select :stars,star_list(),class:"form-controls"%>
                    <%= f.label :comment%>
                    <%= f.text_field :comment,class:"form-controls"%>
                    <%= f.submit "Write Review",class:"btn btn-primary"%>
                <%end%>
            </div>
        </div>
    </body>
</html>