<!DOCTYPE html>

<html>
    <head></head>
    <body>
        <div class="row">
                <div class="col-md-5 col-md-offset-3">
                    <h1>Create Listing</h1>
                    <%= form_with(url:'/admin_listing', local:true, method: :post) do |f|%>
                    
                        <%= f.label :host%>
                        <%= f.select :host,@host_names, {:style => "min-width: 200px;"}, class:"form-control"%>
                        <%= f.label :space%>
                        <%= f.select :space,num_box_array(25), {:style => "min-width: 200px;"}, class:"form-control"%>
                        <br/>
                        <%= f.label :duration,"Duration (in weeks)"%>
                        <%= f.select :duration,num_weeks_array(52), {:style => "min-width: 200px;"}, class:"form-control"%>
                        <br/>
                        <%= f.label :price, "Price (per box per week)" %>
                        <%= f.number_field :price, step: '0.01', min: '0', class: 'form-control' %>
                        <br/>
                        <%= f.submit "Create Listing", class:"btn btn-primary"%>
                    <%end%>
                </div>
            </div>
    </body>

</html>